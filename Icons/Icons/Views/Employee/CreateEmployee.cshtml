@{
    ViewBag.Title = "CreateEmployee";
    Layout = "~/Views/shared/MasterPage.cshtml";
}

@using Icons.Models;

<script src="~/scripts/Employee.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">اضافة موظف جديد</h3>
            </div>
            <div class="content">
                <form id="CreateEmployee" class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">الرقم القومي</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" id="ssn" name="ssn" onkeypress="return isNumberKey(event)" class="form-control parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال الرقم القومي" size="16" value="" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">تاريخ التعاقد</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" data-mask="datetime" id="hiringdate" name="hiringdate" class="form-control datetime parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال تاريخ التعاقد" size="16" value="" type="text">
                                    </div>
                                </div>
                                <div class="form-group" style="border: none;">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">اساسي المرتب</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" id="basicsalary" onkeypress="return isNumberKey(event)" name="basicsalary" class="form-control parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال اساسي المرتب" size="16" value="" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">مدة القبض</label>
                                    <div class="col-sm-6 Arabic">
                                        <select class="select2" name="salarytype">
                                            <optgroup label="مدة القبض">
                                                @{
                                                    int Count = 1;
                                                    foreach (string item in ViewBag.ST)
                                                    {
                                                    <option value="@Count">@item.Replace("_", " ")</option>
                                                        Count++;
                                                    }
                                                }
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">المسمى الوظيفي</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="title" name="title" parsley-trigger="change" required="" parsley-error-message="يجب ادخال المسمى الوظيفي" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">تاريخ الخروج</label>
                                    <div class="col-sm-6 Arabic">
                                        <input data-mask="datetime" class="form-control datetime parsley-validated parsley-error" id="ExitDate" name="ExitDate" parsley-trigger="change" required="" parsley-error-message="يجب ادخال تاريخ الخروج" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">المقتنيات المستلمة منة</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="HoldingAssets" name="HoldingAssets" parsley-trigger="change" required="" parsley-error-message="يجب ادخال المقتنيات المستلمة منة" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">المقتنيات المسلمة الية</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="ExitDeliveredAssets" name="ExitDeliveredAssets" parsley-trigger="change" required="" parsley-error-message="يجب ادخال المقتنيات المسلمة الية" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">المرفقات</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control" id="Attachs" name="Attachs" type="file" />
                                        <input value="" id="Attachment" name="Attachment" type="hidden" />
                                        <input value="" id="Ext" name="Ext" type="hidden" />
                                        <input value="" id="FileName" name="FileName" type="hidden" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">بيانات اخري</label>
                                    <div class="col-sm-6 Arabic">
                                        <textarea id="Notes" name="Notes" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">اسم الموظف</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="name" name="name" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الاسم" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">العنوان</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="address" name="address" parsley-trigger="change" required="" parsley-error-message="يجب ادخال العنوان" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">رقم الهاتف الأول</label>
                                    <div class="col-sm-6 Arabic">
                                        <input id="phone1" name="phone1" class="form-control parsley-validated parsley-error" onkeypress="return isNumberKey(event)" placeholder="999-9999-9999" parsley-type="number" parsley-type-number-message="يرجي ادخال رقم صحيح" parsley-trigger="change" required="" parsley-required-message="يجب ادخال رقم الهاتف" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">رقم الهاتف الثاني</label>
                                    <div class="col-sm-6 Arabic">
                                        <input id="phone2" name="phone2" class="form-control parsley-validated parsley-error" onkeypress="return isNumberKey(event)" placeholder="999-9999-9999" parsley-type="number" parsley-type-number-message="يرجي ادخال رقم صحيح" parsley-trigger="change" required="" parsley-required-message="يجب ادخال رقم الهاتف" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">تاريخ الميلاد</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" data-mask="datetime" name="dateofbirth" id="dateofbirth" class="form-control datetime parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال تاريخ الميلاد" size="16" value="" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">نسبة التأمين</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" name="InsurancePercentage" id="InsurancePercentage" onkeypress="return isNumberKey(event)" class="form-control parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال نسبة التأمين" size="16" value="" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">تاريخ بداية التأمين</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" data-mask="datetime" name="InsuranceFrom" id="InsuranceFrom" class="form-control datetime parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال تاريخ بداية التأمين" size="16" value="" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">تاريخ نهاية التأمين</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" data-mask="datetime" name="InsuranceTo" id="InsuranceTo" class="form-control datetime parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال تاريخ نهاية التأمين" size="16" value="" type="text">
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">ملفات</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" id="Files" class="form-control" value="" type="file">
                                    </div>
                                </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">حفظ</button>
                            <button type="button" onclick="Cancel()" class="btn btn-default">الغاء</button>
                        </div>
                    </div>
                </form>
                <div class="resultmsg" style="text-align: center; color: blue;">
                    <label id="result"></label>
                </div>
            </div>
        </div>
    </div>
</div>
