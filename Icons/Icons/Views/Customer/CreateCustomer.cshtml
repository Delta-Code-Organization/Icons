@{
    ViewBag.Title = "CreateCustomer";
    Layout = "~/Views/shared/MasterPage.cshtml";
}
@using Icons.Models;
<script src="~/scripts/Customer.js"></script>
<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">اضافة عميل جديد</h3>
            </div>
            <div class="content">
                <form id="SubCreate" class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">تاريخ الميلاد</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction: ltr;" data-mask="datetime" id="custbirthdate" class="form-control datetime parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال تاريخ الميلاد" size="16" value="" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">بيانات اخري</label>
                                    <div class="col-sm-6 Arabic">
                                        <textarea id="custnotes" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">الاسم</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="custname" name="nick" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الاسم" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">العنوان</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="custaddress" parsley-trigger="change" required="" parsley-error-message="يجب ادخال العنوان" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">رقم الهاتف</label>
                                    <div class="col-sm-6 Arabic">
                                        <input id="PhoneMask" class="form-control parsley-validated parsley-error" onkeypress="return isNumberKey(event)" parsley-trigger="change" required="" parsley-error-message="يجب ادخال رقم الهاتف" type="text">
                                    </div>
                                </div>
                                @* <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: center;" >رقم العميل</label>
                                <div class="col-sm-6 Arabic">
                                    <input data-mask="cardnumber" class="form-control" name="nick" id="Code" parsley-trigger="change" required="" parsley-error-message="يجب ادخال رقم العميل" type="text" />
                                </div>
                            </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">حفظ</button>
                            <button type="button" onclick="Cancel()" class="btn btn-default">الغاء</button>
                        </div>
                    </div>
                </form>
                <div class="resultmsg" style="text-align: center; color: blue;">
                    <label id="result"></label>
                </div>
            </div>
        </div>
    </div>
</div>
