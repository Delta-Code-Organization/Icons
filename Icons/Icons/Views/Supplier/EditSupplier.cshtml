@{
    ViewBag.Title = "EditSupplier";
    Layout = "~/Views/shared/MasterPage.cshtml";
    Supplier S = ViewBag.S as Supplier;
}

@using Icons.Models;

<script src="~/scripts/Supplier.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">اضافة مورد جديد</h3>
            </div>
            <div class="content">
                <form id="SubEdit" class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align:center;">المدينة</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction:ltr;" id="city" name="city" class="form-control parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال المدينة" size="16" value="@S.City" type="text">
                                    </div>
                                </div>
                                <div class="form-group" style="border:none;">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">الحي</label>
                                    <div class="col-sm-6 Arabic">
                                        <input style="direction:ltr;" id="district" name="district" class="form-control parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال اسم الحي" size="16" value="@S.District" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">بيانات اخري</label>
                                    <div class="col-sm-6 Arabic">
                                        <textarea  id="notes" name="notes" class="form-control">@S.Notes</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="block-flat" style="border: none;">
                            <div class="content">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">الاسم</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" value="@S.Name" id="name" name="name" parsley-trigger="change" required="" parsley-error-message="يجب ادخال الاسم" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">العنوان</label>
                                    <div class="col-sm-6 Arabic">
                                        <input class="form-control parsley-validated parsley-error" id="address" value="@S.Address" name="address" parsley-trigger="change" required="" parsley-error-message="يجب ادخال العنوان" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">رقم الهاتف</label>
                                    <div class="col-sm-6 Arabic">
                                        <input id="phone" name="phone" class="form-control parsley-validated parsley-error" value="@S.Phone" placeholder="999-9999-9999" parsley-trigger="change" required="" parsley-error-message="يجب ادخال رقم الهاتف" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label Arabic" style="text-align: center;">رقم الموبايل</label>
                                    <div class="col-sm-6 Arabic">
                                        <input id="mobile" name="mobile" class="form-control parsley-validated parsley-error" value="@S.Mobile" placeholder="999-9999-9999" parsley-trigger="change" required="" parsley-error-message="يجب ادخال رقم الموبايل" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">حفظ</button>
                            <button type="button" onclick="Cancel()" class="btn btn-default">الغاء</button>
                        </div>
                    </div>
                </form>
                <div class="resultmsg" style="text-align:center;color:blue;"><label id="result"></label></div>
            </div>
        </div>
    </div>
</div>