                            @{
                                User User = (User)Session["User"];
                                List<string> GroupNames = new List<string>();
                                List<Screen> LOS = new List<Screen>();
                                foreach (UserAccess UA in User.UserAccesses)
                                {
                                    LOS.Add(UA.Screen);
                                    string G = UA.Screen.GroupName;
                                    GroupNames.Add(G);
                                }
                                List<string> DistinctGroupNames = new List<string>();
                                DistinctGroupNames.AddRange(GroupNames.Distinct());
                                foreach (string GR in DistinctGroupNames)
                                {
                                <li style="text-align: center;"><a href="#"><i style="float: left;" class="fa fa-desktop"></i><span>@GR</span></a>
