@{
    ViewBag.Title = "ContractorFT";
    Layout = "~/Views/shared/MasterPage.cshtml";
}

@using Icons.Models;

<script src="~/scripts/FinancialTransaction.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">مقاولة</h3>
            </div>
            <div class="content">
                <form id="AddFT" class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    <div class="block-flat" style="border: none;">
                        <div class="content">
                            <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: center;">اسم المقاول</label>
                                <div class="col-sm-6 Arabic">
                                    <select class="select2" name="Acc2" id="Acc2">
                                        @{
                                            foreach (Supplier item in ViewBag.S)
                                            {
                                            <option value="@item.AccountingID">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: center;">مركز التكلفة</label>
                                <div class="col-sm-6 Arabic">
                                    <select class="select2" name="Acc1" id="Acc1">
                                        @{
                                            foreach (AccountingTree item in ViewBag.P)
                                            {
                                            <option value="@item.Id">@item.NodeName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: center;">القيمة</label>
                                <div class="col-sm-6 Arabic">
                                    <input class="form-control parsley-validated parsley-error" onkeypress="return isNumberKey(event)" id="Amount" name="Amount" parsley-type="number" parsley-type-number-message="يرجي ادخال رقم صحيح" parsley-trigger="change" required="" parsley-required-message="يجب ادخال القيمة" type="text" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: center;">بيان</label>
                                <div class="col-sm-6 Arabic">
                                    <input class="form-control parsley-validated parsley-error" id="State" name="State" parsley-trigger="change" required="" value="" parsley-required-message="يجب ادخال البيان" type="text" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: center;">التاريخ</label>
                                <div class="col-sm-6 Arabic">
                                    <input style="direction: ltr;" data-mask="datetime" id="Date" name="Date" class="form-control datetime parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال التاريخ" size="16" value="" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label Arabic" style="text-align: center;">ملاحظات</label>
                                <div class="col-sm-6 Arabic">
                                    <textarea id="Notes" name="Notes" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">حفظ</button>
                            <button type="button" onclick="Cancel()" class="btn btn-default">الغاء</button>
                            <img id="CLoader" src="~/content/images/loader_40x40.gif" style="float:right; display:none;" alt="" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
