@{
    ViewBag.Title = "PayslipReport";
    Layout = "~/Views/shared/MasterPage.cshtml";
}

@using Icons.Models;

<script src="~/scripts/ReportPayslip.js"></script>

<div class="row">
    <div class="col-md-9" style="padding: 0; padding-left: 15px;">
        <div style="background-color: #fff; padding: 10px;" id="DivToPrint">
            <h3 class="" style="text-align: right; font-size: 25px;" id="RTitle">تقرير مرتبات موظف</h3>
            <div style="direction: rtl; padding-right: 30px;">
                <div style="direction: rtl;">
                    <label class="ArabicAlign MyCustomFontSize BoldWeight">الاسم :</label><label id="EmployeeNameLabel"></label>
                </div>
                <div style="direction: rtl;">
                    <label class="ArabicAlign MyCustomFontSize BoldWeight">من :</label><label id="FromLabel"></label>&nbsp &nbsp &nbsp
                    <label class="ArabicAlign MyCustomFontSize BoldWeight">الي :</label><label id="ToLabel"></label>
                </div>
                <div style="direction: rtl;">
                    <label class="ArabicAlign MyCustomFontSize BoldWeight">اساسي :</label><label id="BasicSalaryLabel"></label>&nbsp &nbsp &nbsp
                    <label class="ArabicAlign MyCustomFontSize BoldWeight">نوع الراتب :</label><label id="SalaryTypeLabel"></label>
                </div>
            </div>
            <hr style="border-color: #000;" />
            <table style="direction: rtl; border: 1px solid #000; border-color: #000; width: 100%;">
                <thead>
                    <tr style="border: 1px solid #000;">
                        <th style="width: 33%; border: 1px solid #000; text-align: center; font-size: 20px; font-weight: bold;">تاريخ</th>
                        <th style="width: 33%; border: 1px solid #000; text-align: center; font-size: 20px; font-weight: bold;">نوع الحركة</th>
                        <th style="width: 33%; border: 1px solid #000; text-align: center; font-size: 20px; font-weight: bold;">القيمة</th>
                    </tr>
                </thead>
                <tbody id="TblToAppend">
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-3" style="padding: 0;">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">البحث</h3>
            </div>
            <div class="content">
                <form class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" id="ReportPayslip" action="#" style="border-radius: 0px;">
                    <div class="form-group">
                        <label class="Arabic">الموظف</label>
                        <select class="select2" name="Employee" id="Employee" onchange="RefreshReportTitle();">
                            @{
                                foreach (Employee item in ViewBag.Emps)
                                {
                                <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label Arabic" style="text-align: center;">من</label>
                        <div class="col-sm-6 Arabic">
                            <input data-mask="datetime" onchange="RefreshReportTitle();" class="form-control datetime parsley-validated parsley-error" id="From" name="From" parsley-trigger="change" required="" parsley-error-message="يجب ادخال تاريخ بداية البحث" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label Arabic" style="text-align: center;">الي</label>
                        <div class="col-sm-6 Arabic">
                            <input data-mask="datetime" onchange="RefreshReportTitle();" class="form-control datetime parsley-validated parsley-error" id="To" name="To" parsley-trigger="change" required="" parsley-error-message="يجب ادخال تاريخ نهاية البحث" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary Arabic" type="submit">بحث</button>
                        <button class="btn btn-default Arabic">الغاء</button>
                        <button class="btn btn-default" type="button" onclick="PrintReport()"><a href="#" class="fa fa-print"></a>طباعة</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
