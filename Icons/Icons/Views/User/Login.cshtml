    <title>Almaksoud-login</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,400italic,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:300,200,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap core CSS -->
    <link href="/content/js/bootstrap/dist/css/bootstrap.css" rel="stylesheet">

    <link rel="stylesheet" href="/content/fonts/font-awesome-4/css/font-awesome.min.css">
    <link href="~/content/js/jquery.gritter/css/jquery.gritter.css" rel="stylesheet" />
    <script src="/content/js/jquery.js"></script>
    <script src="~/content/js/jquery.parsley/parsley.js"></script>
    <script type="text/javascript" src="/content/js/behaviour/general.js"></script>

    <!-- Bootstrap core JavaScript
================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/content/js/behaviour/voice-commands.js"></script>
    <script src="/content/js/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/content/js/jquery.flot/jquery.flot.js"></script>
    <script type="text/javascript" src="/content/js/jquery.flot/jquery.flot.pie.js"></script>
    <script type="text/javascript" src="/content/js/jquery.flot/jquery.flot.resize.js"></script>
    <script type="text/javascript" src="/content/js/jquery.flot/jquery.flot.labels.js"></script>
    <script src="~/content/js/jquery.gritter/js/jquery.gritter.min.js"></script>
