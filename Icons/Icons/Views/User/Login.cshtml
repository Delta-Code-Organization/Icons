	<![endif]-->
    <script src="~/scripts/User.js"></script>
    <!-- Custom styles for this template -->
    <link href="/content/css/style.css" rel="stylesheet" />

</head>

<body class="texture">

    <div id="cl-wrapper" class="login-container">

        <div class="middle-login">
            <div class="block-flat">
                <div class="header">
                    <h3 class="text-center">
                        <img class="logo-img" style="width:40px; height:40px;" src="/content/images/mak-logo.png" alt="logo" />ابراج المقصود</h3>
                </div>
                <div>
                    <form id="LoginForm" style="margin-bottom: 0px !important;" novalidate="" parsley-validate="" class="form-horizontal">
                        <div class="content">
                            <h4 class="title" style="text-align: right;">تسجبل الدخول</h4>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        <input id="Username" onkeyup="EnableBtns()" type="text" placeholder="اسم المستخدم" id="username" class="form-control parsley-validated parsley-error" parsley-trigger="change" required="" parsley-minlength="2" parsley-minlength-message="اسم المستخدم يجب ان يكون حرفان علي الاقل" parsley-required-message="يجب ادخال اسم المستخدم">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        <input id="Password" onkeyup="EnableBtns()" type="password" parsley-minlength="4" parsley-minlength-message="كلمة المرور يجب ان تكون اربعة احرف علي الاقل" placeholder="كلمة المرور" class="form-control parsley-validated parsley-error" parsley-trigger="change" required="" parsley-required-message="يجب ادخال كلمة المرور">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="foot">
                            <button class="btn btn-primary" id="LoginBtnSubmit" data-dismiss="modal" type="submit" style="float: right;">تسجيل الدخول</button>
                            <img id="LoaderImg" style="display: none; float: right; margin-bottom: 15px; width: 30px; height: 30px;" src="~/content/images/loader_40x40.gif" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center out-links"><a href="#">&copy; 2013 Delta Code</a></div>
        </div>

    </div>
</body>
</html>

