@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/shared/MasterPage.cshtml";
}

@using Icons.Models;

<script src="~/scripts/User.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3 class="ArabicAlign">اضافة حساب جديد</h3>
            </div>
            <div class="content">
                <form id="CreateAccForm" class="form-horizontal group-border-dashed" novalidate="" parsley-validate="" action="#" style="border-radius: 0px;">
                    
                    <div class="form-group">
                        <label class="col-sm-3 control-label Arabic" style="text-align: center;">اسم المستخدم</label>
                        <div class="col-sm-6 Arabic">
                            <input class="form-control parsley-validated parsley-error" id="aname" name="aname" parsley-trigger="change" required="" parsley-minlength="2" parsley-minlength-message="اسم المستخدم يجب ان يكون حرفان علي الاقل" parsley-required-message="يجب ادخال اسم المستخدم" type="text" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label Arabic" style="text-align: center;">كلمة المرور</label>
                        <div class="col-sm-6 Arabic">
                            <input class="form-control parsley-validated parsley-error" id="apass" name="apass" parsley-minlength="5" parsley-minlength-message="كلمة المرور يجب ان تكون خمسة  احرف علي الاقل" parsley-trigger="change" required="" parsley-required-message="يجب ادخال كلمة المرور" type="password" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label Arabic" style="text-align: center;">تأكيد كلمة المرور</label>
                        <div class="col-sm-6 Arabic">
                            <input class="form-control parsley-validated parsley-error" parsley-equalto="#apass" id="prodname" name="aconpass" parsley-trigger="change" required="" parsley-equalto-message="كلمة المرور لا تتطابق مع كلمة المرور السابقة" parsley-required-message="يجب تأكيد كلمة المرور" type="password" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label Arabic" style="text-align: center;">صلاحيات المستخدم</label>
                        <div class="col-sm-6 Arabic">
                            <div style="text-align: right; direction: rtl;" class="panel-group accordion accordion-semi" id="accordion3">
                                @{
                                    List<Screen> LOS = new List<Screen>();
                                    LOS = ViewBag.Screens;
                                    List<string> Groups = new List<string>();
                                    List<string> DisGroups = new List<string>();
                                    Groups = ViewBag.Groups;
                                    DisGroups.AddRange(Groups.Distinct());
                                    int Counter = 0;
                                    foreach (string G in DisGroups)
                                    {
                                        if (Counter == 0)
                                        {
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion3" href="#@Counter">
                                                    <i class="fa fa-angle-left"></i>&nbsp @G
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="@Counter" class="panel-collapse collapse in">
                                            <div class="panel-body">
                                                @{
                                            List<Screen> LOCS = new List<Screen>();
                                            LOCS = LOS.Where(p => p.GroupName == G).ToList();
                                            foreach (Screen SSS in LOCS)
                                            {
                                                    <label class="checkbox-inline">
                                                        <input class="parsley-validated parsley-error" parsley-error-container="#CheckBoxErrorContainer" parsley-mincheck="2" parsley-mincheck-message="يجب اختيار صلاحيتان علي لاقل" type="checkbox" id="isTrack@(SSS.ID)" value="@SSS.ID" name="Pers[]">
                                                        &nbsp @SSS.Title
                                                    </label>
                                            }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                        }
                                        else
                                        {
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a class="collapsed" data-toggle="collapse" data-parent="#accordion3" href="#@Counter">
                                                    <i class="fa fa-angle-left"></i>&nbsp  @G
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="@Counter" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                @{
                                            List<Screen> LOCS = new List<Screen>();
                                            LOCS = LOS.Where(p => p.GroupName == G).ToList();
                                            foreach (Screen SSS in LOCS)
                                            {
                                                    <label class="checkbox-inline">
                                                        <input type="checkbox" id="isTrack@(SSS.ID)" value="@(SSS.ID)" name="Pers[]">
                                                        &nbsp @SSS.Title
                                                    </label>
                                            }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                        }
                                        Counter++;
                                    }
                                }
                            </div>
                            <div id="CheckBoxErrorContainer" style="text-align:right; width:100%; height:auto;">

                        </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <img id="LoaderImg" style="display:none; float:left; width:30px; height:30px;" src="~/content/images/loader_40x40.gif" />
                            <button type="submit" value="CreateUserBtnSubmit" class="btn btn-primary">حفظ</button>
                            <button type="button" onclick="Cancel()" class="btn btn-default">الغاء</button>
                        </div>
                    </div>
                </form>
                <div class="resultmsg" style="text-align: center; color: blue;">
                    <label id="result"></label>
                </div>
            </div>
        </div>
    </div>
</div>



